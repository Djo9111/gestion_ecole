<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ecole_horaire_form_view" model="ir.ui.view">
            <field name="name">ecole.horaire.form</field>
            <field name="model">ecole.horaire</field>
            <field name="arch" type="xml">
                <form string="Créneau Horaire">
                    <sheet>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="jour"/>
                            <field name="heure_debut"/>
                            <field name="heure_fin"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ecole_horaire_tree_view" model="ir.ui.view">
            <field name="name">ecole.horaire.tree</field>
            <field name="model">ecole.horaire</field>
            <field name="arch" type="xml">
                <tree string="Créneaux Horaires">
                    <field name="name"/>
                    <field name="jour"/>
                    <field name="heure_debut"/>
                    <field name="heure_fin"/>
                </tree>
            </field>
        </record>

        <record id="ecole_horaire_action" model="ir.actions.act_window">
            <field name="name">Créneaux Horaires</field>
            <field name="res_model">ecole.horaire</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="rapport_assiduite_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2 style="text-align: center;">Rapport d'Assiduité</h2>
                            <h3 style="text-align: center;"><span t-field="doc.name"/></h3>
                            <br/>

                            <div class="row" style="text-align: center;">
                                <div class="col-4">
                                    <p><strong>Taux de Présence</strong></p>
                                    <h3><span t-field="doc.taux_presence" t-options='{"widget": "float", "precision": 1}'/> %</h3>
                                </div>
                                <div class="col-4">
                                    <p><strong>Jours Présents</strong></p>
                                    <h3><span t-field="doc.jours_presents"/></h3>
                                </div>
                                <div class="col-4">
                                    <p><strong>Jours Absents</strong></p>
                                    <h3><span t-field="doc.jours_absents"/></h3>
                                </div>
                            </div>
                            
                            <hr/>

                            <h4>Détail des présences et absences:</h4>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.presence_ids" t-as="p">
                                        <td><span t-field="p.date_presence"/></td>
                                        <td><span t-field="p.statut_presence"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>